<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">
    <EditText android:layout_width="100dp" android:layout_height="wrap_content" android:id="@+id/input_txt" android:inputType="number" android:singleLine="true" android:hint="输入数字"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="继续" android:id="@+id/input_next" android:layout_marginRight="10dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="完成" android:id="@+id/input_ok"/>
    </LinearLayout>

</LinearLayout>